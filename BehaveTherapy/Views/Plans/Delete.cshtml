@model BehaveTherapy.Models.Plan

@{
    ViewBag.Title = "Delete Plan";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <br />

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Plan</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Created)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Created)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Therapist)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Therapist.FullName)
            </dd>

            <dt>
                Is Deleted
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsDeleted)
            </dd>

            <dt>
                Client
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AssignedToUser.FullName)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |

            </div>
            <br />
        }
    </div>
    <div>
        @Html.ActionLink("Back to My Plans", "My Plans")
    </div>
    <br />
</body>
</html>
