@model IEnumerable<BehaveTherapy.Models.Plan>

@{
    ViewBag.Title = "Plan Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>
        @Html.ActionLink("Create New Plan", "Create")
    </h3>
    <h3>
        <a href="~/Account/Register">Register New User</a>
    </h3>
    <div class="table-responsive">
        <table id="mytable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        Plan Title
                    </th>
                    <th>
                        Created
                    </th>
                    <th>
                        Therapist
                    </th>
                    <th>
                        Plan Is Deleted
                    </th>
                    <th>
                        Assigned to Client
                    </th>
                    @if (User.IsInRole("Admin") || User.IsInRole("CompanyAdmin") || User.IsInRole("Therapist"))
                    {
                        <th>
                            Links
                        </th>

                        <th>
                            Add Exercise
                        </th>
                        <th>
                            Remove Exercise
                        </th>
                    }

                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {


                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Created.DateTime, "{0:dd-MMM-yyyy}")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Therapist.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsDeleted)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AssignedToUser.FullName)
                        </td>

                        @if (User.IsInRole("Admin") || User.IsInRole("CompanyAdmin") || User.IsInRole("Therapist"))
                        {

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>


                            <td>
                                @Html.ActionLink("Add Exercise to Plan", "AddExercise", "AddRmvExerciseToPlan", new { id = item.Id }, new { @class = "btn btn-success" })
                            </td>

                            <td>
                               

                                    @foreach (var ex in item.Exercises)
                                    {
                                        <li>
                                            @ex.Title
                                            
                                            @Html.ActionLink("Remove Exercise", "RemoveExercise", "AddRmvExerciseToPlan", new { planId = item.Id, exId = ex.Id }, new { @class = "btn-sm btn-warning" })
                                            <br />
                                            <br />
                                        </li>
                                    }

                            </td>
                        }
                    </tr>

                }
            </tbody>

        </table>
    </div>
</body>
</html>


<script>
    $('#mytable').DataTable();
</script>

