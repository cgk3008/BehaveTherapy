@model IEnumerable<BehaveTherapy.Models.Plan>

@{
    ViewBag.Title = "My Plans";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New Plan", "Create")
    </p>

    <a href="~/Account/Register">Register New User</a>

    <div class="table-responsive">
        <table id="mytable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        Plan Title
                    </th>
                    <th>
                        Created
                    </th>
                    <th>
                        Therapist
                    </th>
                    <th>
                        Plan Is Deleted
                    </th>
                    <th>
                        Assigned to Client
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {


                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Created, "{0:dd-MMM-yyyy}")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TherapistId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsDeleted)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AssignedToUserId)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>

                }
            </tbody>

        </table>
    </div>
</body>
</html>


<script>
    $('#mytable').DataTable();
</script>
